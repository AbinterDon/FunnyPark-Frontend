<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_Linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--android:background="#e2e2e2" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/list_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="店家優惠-30點FunnyCoin買一送一"
                android:textSize="16dp"
                android:textColor="#001f2c"
                android:textStyle="bold"
                android:layout_marginBottom="0.5dp" />

            <TextView
                android:id="@+id/list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-08-25 03:00"
                android:textColor="#20627e"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#004564"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/list_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="德明財經科技大學"
                android:textColor="#fff"
                android:textSize="16dp"

                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>