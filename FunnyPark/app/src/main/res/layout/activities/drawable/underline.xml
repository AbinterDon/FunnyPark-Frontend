<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--元件的顏色-->
            <solid android:color="#e2e2e2"/>

            <!--邊框顏色、粗細-->
